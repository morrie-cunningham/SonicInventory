@model SonicInventory.Models.ProjectViewModel

@{
    ViewBag.Title = "DeletePart";
}

<h2>DeletePart</h2>

<h3>Are you sure you want to delete this part?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Part.drawingNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.drawingNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Part.drawingType)
        </dt>

        <dd>
            @Model.DrawingTypeList.First(d => d.id == Model.Part.drawingType).Name
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Part.detailNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.detailNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Part.revNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.revNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Part.wasModified)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.wasModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Part.designer_id)
        </dt>

        <dd>
            @Model.DesignerList.First(m => m.id == Model.Part.designer_id).Name
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Part.fabricator_id)
        </dt>

        <dd>
            @Model.FabricatorList.First(n => n.id == Model.Part.fabricator_id).Name
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Part.file)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Part.file)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
